---
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import Roboto from '../components/Roboto.astro';

type Props = {
  title: string;
};

const { title } = Astro.props as Props;
---

<html lang='en'>
  <head>
    <meta charset='utf-8' />
    <meta
      name='viewport'
      content='minimal-ui, width=device-width, initial-scale=1'
    />
    <meta name='theme-color' content='#ffffff' />
    <meta name='title' content={title} />
    <meta http-equiv='Strict-Transport-Security' content='max-age=63072000' />
    <meta http-equiv='X-XSS-Protection' content='0' />

    <link rel='icon' type='image/svg+xml' href='/images/icon.svg' />
    <title>{title}</title>
  </head>
  <body>
    <Header />
    <slot />
    <Footer />
    <Roboto />
    <style lang='scss' is:global>
      // Global styles
      *,
      *::before,
      *::after {
        box-sizing: border-box;
      }

      * {
        margin: 0;
      }

      html {
        height: 100%;
        scroll-behavior: smooth;
      }

      body {
        height: 100%;
        scroll-behavior: smooth;
        line-height: 1.5;
        -webkit-font-smoothing: antialiased;
        font-family: 'Roboto';
        display: flex;
        flex-direction: column;
        overflow: overlay;
      }

      img,
      picture,
      video,
      canvas,
      svg {
        display: block;
        max-width: 100%;
      }

      input,
      button,
      textarea,
      select {
        font: inherit;
      }

      p,
      h1,
      h2,
      h3,
      h4,
      h5,
      h6 {
        overflow-wrap: break-word;
      }

      :root {
        --gray-600: #343434;
        --gray-400: #424242;
        --gray-200: #c4c4c4;
        --gray-100: #f7f7f7;
        --text-gray-600: #343434;
        --text-gray-300: #c9c9c9;
        --text-white-100: #ffffff;
        --yellow: #ffb61d;
        --black: #000000;
        --warning: #ea410c;
        --additions: #3b79c3;
        --disable: #e7e5e5;
      }

      h1 {
        font-style: normal;
        font-weight: 500;
        color: var(--text-white-100);
      }

      h2 {
        font-weight: 500;
        color: var(--gray-600);
      }

      h3 {
        font-weight: 500;

        &.white {
          color: var(--text-white-100);
        }

        &.black {
          color: var(--text-gray-600);
        }
      }

      p {
        font-style: normal;
        font-weight: 400;
        color: var(--text-white-100);
      }
    </style>
  </body>
</html>
